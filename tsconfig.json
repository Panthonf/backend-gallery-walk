{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "./build",
        "rootDir": "./src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "strict": true
      },
      "include": ["src/**/*.ts"]
}