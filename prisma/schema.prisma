// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Event {
  id             Int      @id @default(autoincrement())
  eventName      String
  startDate      DateTime
  endDate        DateTime
  assistantEmail String[]
  description    String
  submitStart    DateTime
  submitEnd      DateTime
  numberOfMember Int
  virtualMoney   Int
  unitMoney      String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdById    Int
}
