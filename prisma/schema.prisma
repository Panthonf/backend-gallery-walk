// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  first_name_th String
  last_name_th  String
  first_name_en String
  last_name_en  String
  email         String  @unique
  affiliation   String
  profile_pic   String
}

model Event {
  id                 Int      @id @default(autoincrement())
  event_name         String
  start_date         DateTime
  end_date           DateTime
  assistant_emails   String[]
  description        String
  submit_start       DateTime
  submit_end         DateTime
  number_of_member   Int
  virtual_money      Int
  unit_money         String
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt
  created_by_user_id Int   
}
